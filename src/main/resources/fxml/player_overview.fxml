<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #5cdb93;" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.PlayerOverviewController">
    <center>
        <TableView fx:id="playerTableView" prefHeight="483.0" prefWidth="550.0" style="-fx-effect: asd;">
            <columns>
                <TableColumn fx:id="idPlayerColumn" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="NOMBRE" />
                <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="APELLIDO" />
                <TableColumn fx:id="dniColumn" prefWidth="75.0" text="DNI" />
            <TableColumn fx:id="commentsColumn" prefWidth="75.0" text="COMENTARIOS" />
                <TableColumn fx:id="idTeamColumn" prefWidth="75.0" text="EQUIPO" />
            </columns>
            <effect>
                <InnerShadow blurType="GAUSSIAN">
                    <color>
                        <Color red="0.14473684132099152" green="0.12396442145109177" blue="0.12396442145109177" />
                    </color>
                </InnerShadow>
            </effect>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </TableView>
    </center>
    <right>
        <FlowPane alignment="TOP_CENTER" layoutX="175.0" layoutY="331.0" orientation="VERTICAL" prefHeight="40.0" style="-fx-effect: dropshadow;">
            <Button fx:id="btnAdd" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnAddPlayerOnclick" prefHeight="29.0" prefWidth="94.0" text="Agregar ">
                <FlowPane.margin>
                    <Insets />
                </FlowPane.margin>
            </Button>
            <Button fx:id="btnDelete" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnDeletePlayerOnClick" prefHeight="28.0" prefWidth="94.0" text="Eliminar">
                <FlowPane.margin>
                    <Insets bottom="15" top="15" />
                </FlowPane.margin>
            </Button>
            <Button fx:id="btnUpdate" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#btnUpdatePlayerOnclick" prefHeight="30.0" prefWidth="94.0" text="Editar" />
         <Label fx:id="lblStatus" prefHeight="104.0" prefWidth="92.0" />
         <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#btnRefreshOnAction" prefHeight="30.0" prefWidth="30.0" style="-fx-graphic: url(https://icons.iconarchive.com/icons/custom-icon-design/mono-general-4/24/refresh-icon.png); -fx-background-color: #D5E3E3;" textAlignment="CENTER">
            <FlowPane.margin>
               <Insets left="22.0" />
            </FlowPane.margin></Button>
            <padding>
                <Insets bottom="30.0" left="30.0" right="5.0" top="30.0" />
            </padding>
        </FlowPane>

    </right>
    <opaqueInsets>
        <Insets />
    </opaqueInsets>
   <effect>
      <InnerShadow />
   </effect>
   <top>
      <HBox prefHeight="40.0" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="30.0" text="Filtrar por Equipo: " textAlignment="CENTER">
               <font>
                  <Font size="15.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" top="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="cboTeam" prefHeight="20.0" prefWidth="150.0">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="10.0" />
               </HBox.margin></ComboBox>
         </children>
      </HBox>
   </top>
</BorderPane>
